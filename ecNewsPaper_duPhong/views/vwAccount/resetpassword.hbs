{{#section 'css'}}
<style>
  body {
    background-color: #f8f9fa; /* Nền xám nhạt */
    font-family: 'Poppins', sans-serif;
  }

  .card {
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    border: none;
  }

  .btn-success {
    background-color: #28a745;
    border: none;
  }

  .btn-success:hover {
    background-color: #218838;
    transform: scale(1.02);
    transition: all 0.3s ease-in-out;
  }

  .form-control {
    border: 2px solid #28a745;
    border-radius: 30px;
    padding: 10px 15px;
    font-size: 1.1rem;
  }

  .form-control:focus {
    border-color: #218838;
    box-shadow: 0 0 5px rgba(33, 136, 56, 0.5);
  }

  .text-muted a {
    text-decoration: none;
    color: #28a745;
  }

  .text-muted a:hover {
    text-decoration: underline;
  }

  h3.card-title {
    font-size: 1.8rem;
    font-weight: bold;
    color: #28a745;
  }
</style>
{{/section}}

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card p-4">
        <h3 class="card-title text-center mb-4">Reset Your Password</h3>
        <p class="text-center text-muted mb-4">Create a new password to secure your account.</p>

        <form method="POST" action="/account/resetpassword">
          <!-- New Password Field -->
          <div class="mb-3">
            <label for="password" class="form-label">New Password</label>
            <input 
              type="password" 
              name="password" 
              id="password" 
              class="form-control" 
              placeholder="Enter your new password" 
              required>
          </div>

          <!-- Confirm Password Field -->
          <div class="mb-4">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input 
              type="password" 
              name="confirmPassword" 
              id="confirmPassword" 
              class="form-control" 
              placeholder="Confirm your new password" 
              required>
          </div>

          <!-- Submit Button -->
          <div class="d-grid">
            <button type="submit" class="btn btn-success btn-lg rounded-pill">Reset Password</button>
          </div>

          <!-- Error Message -->
          {{#if message}}
            <p class="text-center mt-3 text-danger">{{message}}</p>
          {{/if}}
        </form>

        <p class="text-center text-muted mt-4">
          Remembered your password? 
          <a href="/account/login">Login here</a>
        </p>
      </div>
    </div>
  </div>
</div>
