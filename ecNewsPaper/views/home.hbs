
<!--Top 3 bài viết-->
<div class="card">
            <h4 class="card-header text-white" style="background-color: darkTurquoise;">Top 3 bài viết nổi bật nhất tuần</h4>
            <div class="card-body p-0">
              <!--carousel-->
              <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                  <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                  <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                  <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <!--thứ muốn hiện lên-->
                    <div class="card" >
                         <img src="http://localhost:3030/static/imgs/posts/{{lastPost.PostID}}/{{lastPost.PostID}}_1.jpg" class="card-img-top " alt="..." style="height: 60vh;" >
                        <div class="card-body">
                          <h5 class="card-title">
                            <a href="/posts/detail?id={{lastPost.PostID}}" class="card-link">                          
                              {{lastPost.PostTitle}}
                            </a>
                            {{#if lastPost.Premium}}                                                             
                                <span class="badge badge-pill badge-warning">
                                  Premium
                                  <i class="bi bi-stars"></i>
                                </span>  
                            {{else}}
                            {{/if}}                                                    
                          </h5>                                                                          
                          <p class="card-text">{{lastPost.SumContent}}</p>
                        </div>
                    </div>
    
                    
                  </div>
                     
                  {{#each top2post}}
                  <div class="carousel-item">
                    <!--thứ muốn hiện lên-->
                    <div class="card" >
                         <img src="http://localhost:3030/static/imgs/posts/{{PostID}}/{{PostID}}_1.jpg" class="card-img-top" alt="..." style="height: 60vh;">
                        <div class="card-body"> 
                          <h5 class="card-title">
                            <a href="/posts/detail?id={{PostID}}" class="card-link">                          
                                {{PostTitle}}
                            </a>
                            {{#if Premium}}                                                             
                                <span class="badge badge-pill badge-warning">
                                  Premium
                                  <i class="bi bi-stars"></i>
                                </span>  
                            {{else}}
                            {{/if}}                                                   
                          </h5>                                                                          
                          <p class="card-text">{{SumContent}}</p>
                          
                        </div>
                    </div>
    
                    
                  </div>

                  {{/each}}
    
                  
                </div>
                <button class="carousel-control-prev border border-black" style="height: 60vh;" type="button" data-target="#carouselExampleCaptions" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </button>
                <button class="carousel-control-next border border-black" style="height: 60vh;" type="button" data-target="#carouselExampleCaptions" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </button>
              </div>
              
            </div>
</div>

