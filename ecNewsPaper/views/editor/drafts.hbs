<h1>Danh sách bài viết cần duyệt</h1>
<table>
  <thead>
    <tr>
      <th>Tiêu đề</th>
      <th>Chuyên mục</th>
      <th>Ngày đăng</th>
      <th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    {{#each drafts}}
    <tr>
      <td>{{this.title}}</td>
      <td>{{this.CName}}</td>
      <td>{{this.TimePublic}}</td>
      <td>
        <form method="post" action="/editor/approve/{{this.PID}}">
          <input type="text" name="category" placeholder="Chuyên mục mới" required>
          <input type="text" name="tags" placeholder="Tags" required>
          <input type="datetime-local" name="publishTime" required>
          <button type="submit">Duyệt</button>
        </form>
        <form method="post" action="/editor/reject/{{this.PID}}">
          <input type="text" name="reason" placeholder="Lý do từ chối" required>
          <button type="submit">Từ chối</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
