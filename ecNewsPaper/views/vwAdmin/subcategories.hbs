<div class="container mt-4">
    <h2>Quản lý Chuyên Mục "{{categories.CName}}"</h2>
    <hr>
     <!-- Form thêm subcategory -->
    <h3>Thêm Subcategory mới</h3>
    <form method="POST" action="/admin/categories/subcategories/add">
        <div class="form-group mb-2">
            <label for="SCName">Tên Subcategory</label>
            <input type="hidden" name="cid" value="{{this.cid}}">
            <input type="text" name="SCName" id="SCName" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-success m-0">
            Thêm
            <i class="bi bi-plus-lg"></i>
        </button>
    </form>
    <hr>
    <h5>Danh sách SubCategories</h5>
    <!-- Hiển thị danh sách subcategories -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên Subcategory</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            {{#each subcategories}}
            <tr>
                <td>{{this.SCID}}</td>
                <td>{{this.SCName}}</td>
                <td>
                    <!-- Form sửa subcategory -->
                    <form method="POST" action="/admin/categories/subcategories/edit" class="d-inline">
                        <input type="hidden" name="SCID" value="{{this.SCID}}">
                        <input type="hidden" name="cid" value="{{../cid}}">
                        <input type="text" name="SCName" value="{{this.SCName}}" class="form-control d-inline w-50">
                        <button type="submit" class="btn btn-warning">
                            Sửa
                            <i class="bi bi-pencil-fill"></i>
                        </button>
                    </form>

                    <!-- Form xóa subcategory -->
                    <form method="POST" action="/admin/categories/subcategories/delete" class="d-inline">
                        <input type="hidden" name="SCID" value="{{this.SCID}}">
                        <input type="hidden" name="cid" value="{{../cid}}">
                        <button type="submit" class="btn btn-danger">
                            Xóa
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <a href="/admin/categories" class="btn btn-secondary mt-3">Quay lại danh sách Categories</a>
</div>
